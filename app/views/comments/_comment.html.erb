<h1><%= Comment.model_name.human %></h1>
<% if commentable.comments.empty? %>
  <%= t('views.comments.zero') %>
<% else %>
  <table>
    <thead>
      <tr>
        <th><%= User.model_name.human %></th>
        <th><%= Comment.human_attribute_name(:body) %></th>
        <th><%= Report.human_attribute_name(:created_at) %></th>
      </tr>
    </thead>

    <tbody>
      <% commentable.comments.includes(:user).each do |comment| %>
        <tr>
          <td><%= comment.user.name.presence || comment.user.email %></td>
          <td><%= comment.body %></td>
          <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= form_with(model: [commentable, Comment.new]) do |form| %>
  <% if commentable.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(commentable.errors.count, "error") %> prohibited this commentable from being saved:</h2>

      <ul>
        <% commentable.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
